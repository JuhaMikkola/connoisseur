<h1>LCBO Products</h1>

<table>

  <tr>
    <th>Product Name</th>
    <th>Product Price</th>
    <th>Category</th>
    <th>Current Inventory</th>
  </tr>

<% @products['result'].each do |product| %>
  <tr>
    <td><%= link_to product['name'], product_path(product['id']) %></td>
    <td><%= format_price product['price_in_cents'] %></td>
    <td><center><%= product['primary_category'] %></center></td>
    <td><%= product['inventory_count'] %></td>
  </tr>
<% end %>

</table>

<div><%= link_to "< Previous Page", "#{@products['pager']['previous_page_path']}" %></div>
<div><%= link_to "Stores List", "/stores" %></div>
<div><%= link_to "Next Page >", "#{@products['pager']['next_page_path']}" %></div>
